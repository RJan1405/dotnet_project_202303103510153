@model EventTicketingSystem.Models.Event
@{
    ViewData["Title"] = "Delete Event";
}

<h1>Delete Event</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this event?</h3>
    <p>This action cannot be undone.</p>
</div>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Event Details</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>
            
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
            
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dddd, dd MMMM yyyy")</dd>
            
            <dt class="col-sm-3">Registration Deadline</dt>
            <dd class="col-sm-9">@Model.RegistrationDeadline.ToString("dddd, dd MMMM yyyy")</dd>
            
            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteEvent">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>