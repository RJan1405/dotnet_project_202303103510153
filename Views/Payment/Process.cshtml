@model dynamic
@{
    ViewData["Title"] = "Process Payment";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Payment Details</h4>
            </div>
            <div class="card-body">
                @if (ViewBag.Event != null)
                {
                    <h5>@ViewBag.Event.Title</h5>
                }
                
                @if (ViewBag.OrderId != null)
                {
                    <p>Order ID: @ViewBag.OrderId</p>
                }
                
                @if (ViewBag.Amount != null)
                {
                    <p>Amount: @ViewBag.Amount.ToString("C")</p>
                }
                
                <div class="alert alert-info">
                    <p><strong>Note:</strong> This is a demo payment page. No actual payment will be processed.</p>
                </div>
                
                <form asp-action="Complete" method="post">
                    @if (ViewBag.OrderId != null)
                    {
                        <input type="hidden" name="orderId" value="@ViewBag.OrderId" />
                    }
                    
                    <div class="mb-3">
                        <label for="cardNumber" class="form-label">Card Number</label>
                        <input type="text" class="form-control" id="cardNumber" placeholder="1234 5678 9012 3456" value="4111 1111 1111 1111" readonly>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="expiryDate" class="form-label">Expiry Date</label>
                            <input type="text" class="form-control" id="expiryDate" placeholder="MM/YY" value="12/25" readonly>
                        </div>
                        <div class="col-md-6">
                            <label for="cvv" class="form-label">CVV</label>
                            <input type="text" class="form-control" id="cvv" placeholder="123" value="123" readonly>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="cardName" class="form-label">Name on Card</label>
                        <input type="text" class="form-control" id="cardName" placeholder="John Doe" value="Demo User" readonly>
                    </div>
                    
                    <button type="submit" class="btn btn-success btn-lg w-100">
                        Pay @(ViewBag.Amount != null ? ViewBag.Amount.ToString("C") : "$0.00")
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
    </div>
</div>
    </div>
</div>