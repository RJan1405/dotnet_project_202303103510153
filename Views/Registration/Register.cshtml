@{
    ViewData["Title"] = "Register for Event";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="text-center">Register for Event</h2>
                </div>
                <div class="card-body">
                    @if (ViewBag.Event != null)
                    {
                        <div class="mb-4">
                            <h3>@ViewBag.Event.Title</h3>
                            <p class="text-muted">
                                <i class="bi bi-calendar"></i> @ViewBag.Event.Date.ToString("dddd, dd MMMM yyyy")
                                <br />
                                <i class="bi bi-currency-dollar"></i> @ViewBag.Event.Price.ToString("C")
                            </p>
                        </div>

                        <div class="alert alert-info">
                            <p>You are about to register for this event. Please confirm to proceed to payment.</p>
                        </div>

                        <form asp-action="Register" asp-route-id="@ViewBag.Event.Id" method="post">
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Confirm Registration</button>
                                <a asp-controller="Event" asp-action="Details" asp-route-id="@ViewBag.Event.Id" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <p>Event information not available. Please try again.</p>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Return to Home</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>