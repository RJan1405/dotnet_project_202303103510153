@model EventTicketingSystem.Models.Registration
@{
    Layout = null;
    var eventDate = Model.Event.Date;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Ticket - @Model.Event.Title</title>
    <style>
        /* Minimal inline styles for reliable PDF rendering */
        * { box-sizing: border-box; }
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            margin: 0; padding: 16px; color: #111827; background: #ffffff;
        }
        .ticket {
            border: 1px solid #e5e7eb; border-radius: 12px; padding: 20px;
            width: 100%;
            background: #ffffff;
        }
        .header {
            display: flex; justify-content: space-between; align-items: center; margin-bottom: 16px;
        }
        .brand {
            font-weight: 700; font-size: 18px; color: #6d28d9;
        }
        .status {
            font-weight: 600; font-size: 12px; padding: 4px 8px; border-radius: 999px;
            background: #d1fae5; color: #065f46; border: 1px solid #10b981;
        }
        .title {
            font-size: 20px; font-weight: 700; margin: 4px 0 12px; color: #111827;
        }
        .grid {
            display: grid; grid-template-columns: 1fr 1fr; gap: 12px;
        }
        .field { font-size: 12px; color: #6b7280; }
        .value { font-size: 14px; color: #111827; font-weight: 600; }
        .divider {
            margin: 16px 0; height: 1px; background: linear-gradient(90deg, #e5e7eb, #f3f4f6, #e5e7eb);
        }
        .footer {
            display: flex; justify-content: space-between; align-items: center; margin-top: 8px;
        }
        .qr {
            width: 80px; height: 80px; border: 1px dashed #d1d5db; border-radius: 8px;
            display: flex; align-items: center; justify-content: center; font-size: 10px; color: #6b7280;
        }
        .small { font-size: 11px; color: #6b7280; }
    </style>
</head>
<body>
    <div class="ticket">
        <div class="header">
            <div class="brand">Event Ticket</div>
            <div class="status">Paid</div>
        </div>

        <div class="title">@Model.Event.Title</div>

        <div class="grid">
            <div>
                <div class="field">Attendee</div>
                <div class="value">@Model.User.Name</div>
            </div>
            <div>
                <div class="field">Ticket No.</div>
                <div class="value">#@Model.Id</div>
            </div>
            <div>
                <div class="field">Date</div>
                <div class="value">@eventDate.ToString("dddd, dd MMM yyyy")</div>
            </div>
            <div>
                <div class="field">Time</div>
                <div class="value">@eventDate.ToString("h:mm tt")</div>
            </div>
            <div>
                <div class="field">Transaction ID</div>
                <div class="value">@Model.TransactionId</div>
            </div>
            <div>
                <div class="field">Status</div>
                <div class="value">@Model.PaymentStatus</div>
            </div>
        </div>

        <div class="divider"></div>

        <div class="footer">
            <div class="small">Please bring a valid ID. Non-transferable.</div>
            <div class="qr">QR Code</div>
        </div>
    </div>
</body>
</html>