@model EventTicketingSystem.Models.Registration

@{
    ViewData["Title"] = "Payment Successful";
}

<div class="container">
    <div class="row justify-content-center my-5">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h2 class="text-center mb-0">Payment Successful!</h2>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
                    </div>
                    
                    <h3>Thank you for your registration!</h3>
                    <p class="lead">Your payment for <strong>@Model.Event.Title</strong> has been processed successfully.</p>
                    
                    <div class="alert alert-info mt-4">
                        <p class="mb-0"><strong>Transaction ID:</strong> @Model.TransactionId</p>
                    </div>
                    
                    <div class="mt-4">
                        <a asp-controller="Registration" asp-action="SendConfirmationEmail" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                            <i class="bi bi-envelope"></i> Send Confirmation Email
                        </a>
                        <a asp-controller="Event" asp-action="MyTickets" class="btn btn-primary">
                            <i class="bi bi-ticket-perforated"></i> View My Tickets
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>