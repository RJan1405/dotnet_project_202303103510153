@model IEnumerable<EventTicketingSystem.Models.Registration>
<div class="container">
    <h1 class="my-4">My Tickets</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    
    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Event</th>
                        <th>Date</th>
                        <th>Price</th>
                        <th>Payment Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Event.Title</td>
                            <td>@item.Event.Date.ToString("dd/MM/yyyy")</td>
                            <td>$@item.Event.Price.ToString("0.00")</td>
                            <td>
                                @if (item.PaymentStatus == "Success")
                                {
                                    <span class="badge bg-success">Paid</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="Registration"
                                   asp-action="SendConfirmationEmail"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-success @(item.PaymentStatus == "Success" ? "" : "disabled")"
                                   title="@(item.PaymentStatus == "Success" ? "Resend ticket email" : "Complete payment to enable email")">
                                    Send Confirmation
                                </a>
                                @if (item.PaymentStatus != "Success")
                                {
                                    <a asp-controller="Registration"
                                       asp-action="Payment"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        Complete Payment
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>You haven't registered for any events yet.</p>
            <a asp-controller="Event" asp-action="Index" class="btn btn-primary mt-2">Browse Events</a>
        </div>
    }
</div>